# MAOF Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# AI Provider API Keys
# ============================================================================

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI API Key (get from https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection URL
DATABASE_URL=postgresql://localhost:5432/maof

# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Security Configuration
# ============================================================================

# JWT Secret Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=your-jwt-secret-key-here

# API Keys for MAOF API (comma-separated)
MAOF_API_KEYS=key1,key2,key3

# Encryption key for sensitive data (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-here

# ============================================================================
# Monitoring & Observability
# ============================================================================

# Enable Prometheus metrics
METRICS_ENABLED=true

# Enable OpenTelemetry tracing
TRACING_ENABLED=false

# Jaeger endpoint for distributed tracing
JAEGER_ENDPOINT=localhost:6831

# ============================================================================
# API Configuration
# ============================================================================

# API Server host
API_HOST=0.0.0.0

# API Server port
API_PORT=8000

# Enable CORS (for development only)
CORS_ENABLED=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Application Configuration
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Max concurrent tasks
MAX_CONCURRENT_TASKS=10

# Task timeout in seconds
DEFAULT_TASK_TIMEOUT=60

# ============================================================================
# Agent Configuration
# ============================================================================

# Default routing strategy (capability, cost, performance, round_robin, intelligent, load_balanced)
ROUTING_STRATEGY=intelligent

# Default max tokens per request
DEFAULT_MAX_TOKENS=4096

# Default rate limit (requests per minute)
DEFAULT_RATE_LIMIT=10

# Token budget per agent (0 for unlimited)
TOKEN_BUDGET=0

# Budget window in seconds
BUDGET_WINDOW=3600

# ============================================================================
# Feature Flags
# ============================================================================

# Enable result caching
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600

# Enable PII detection and redaction
ENABLE_PII_DETECTION=true

# Enable content filtering
ENABLE_CONTENT_FILTERING=true

# Enable automatic retries
ENABLE_RETRIES=true

# Max retry attempts
MAX_RETRY_ATTEMPTS=3

# ============================================================================
# Development/Testing
# ============================================================================

# Use mock agents when API keys not available
USE_MOCK_AGENTS=false

# Enable debug mode
DEBUG=false

# Seed for reproducible testing
RANDOM_SEED=42
